---
import Header from '../components/Header.astro'
import BaseHead from '../components/BaseHead.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../config'

export interface Props {
  content: {
    title?: string
    description?: string
  }
  valid: Object
}

const {
  content: { title = SITE_TITLE, description = SITE_DESCRIPTION },
  valid,
} = Astro.props
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    {Astro.url.pathname.includes('/blog/') && <link rel="stylesheet" href="/css/light.css" />}
    <!-- {Astro.url.pathname.includes('/blog/') && <link rel="stylesheet" href="/css/dark.css" />} -->
  </head>

  <body>
    <Header />
    <main class="flex flex-col items-center bg-white font-display text-black transition-colors duration-200 dark:bg-black dark:text-gray-200">
      <div class="flex w-full max-w-[90vw] flex-col py-10 sm:px-10 lg:max-w-[75vw]">
        {valid && <slot />}
      </div>
    </main>
    <link as="font" type="font/woff2" crossorigin="anonymous" href="/fonts/inter-var.woff2" />
  </body>
</html>
