---
import { GET_ENV } from '@/src/lib/getENV'

const showSiteVerification = Astro.url.origin.includes('://rishi.app')
const { title, description, image = '/static/social-media-card.jpg' } = Astro.props
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta property="og:type" content="website" />
<meta property="og:locale" content="en_US" />
<meta name="generator" content={Astro.generator} />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
{showSiteVerification && <meta name="google-site-verification" content="hgb7sEPSlo0We6rT4UtpV04_qCFTryuwkcSEdtmAxr8" />}

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:title" content={title} />
<meta property="og:type" content="website" />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.site)} />
<meta property="og:url" content={`${GET_ENV('DOMAIN_URL')}${Astro.url.pathname}`} />

<!-- Twitter -->
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:image" content={new URL(image, Astro.site)} />
<meta property="twitter:url" content={`${GET_ENV('DOMAIN_URL')}${Astro.url.pathname}`} />
