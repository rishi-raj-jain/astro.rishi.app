---
import { getTagline } from '../api'
import MainLayout from '@/layouts/MainLayout.astro'
import SocialLinks from '@/components/SocialLinks.astro'
import RichTextResolver from 'storyblok-js-client/dist/rich-text-resolver.cjs'

let data = undefined

try {
  data = await getTagline('home')
} catch (e) {
  console.log(e)
}

const aboutLine = new RichTextResolver().render(data)
---

<MainLayout valid={data} content={{ title: 'Home - Rishi Raj Jain' }}>
  <div class="md:justify-auto flex min-h-[90vh] flex-col justify-center md:flex-row md:items-center">
    <div class="flex w-full flex-col items-center justify-center md:w-1/2 md:items-start">
      <div class="filter md:hidden">
        <img alt="Rishi Raj Jain" width={120} height={120} src={`/static/favicon-image.jpg`} class="rounded-full grayscale" />
      </div>
      <h1 class="mt-5 text-2xl font-bold sm:text-5xl md:mt-0">Rishi Raj Jain</h1>
      <h2 class="mt-5 text-center text-lg text-gray-500 dark:text-white sm:text-xl md:text-left">Technical Customer Success Manager at Edgio</h2>
      <div class="flex flex-row space-x-5">
        <SocialLinks />
      </div>
      <div class="mt-10 h-[1px] w-full bg-gray-200 dark:bg-gray-700"></div>
      <h2 set:html={aboutLine} class="text-md mt-10 text-center text-gray-500 dark:text-white sm:text-lg md:text-left" />
    </div>
    <div class="hidden flex-col items-end justify-center md:flex md:w-1/2">
      <div class="grayscale filter">
        <img alt="Rishi Raj Jain" width={330} height={440} class="rounded object-cover" src={`/static/favicon-image.jpg`} />
      </div>
    </div>
  </div>
</MainLayout>
